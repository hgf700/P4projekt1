<Window x:Class="p4_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p4_projekt"
        mc:Ignorable="d"
        Title="Restaurant app" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="Orange" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <!--nazwa-->
            <TextBlock Text="Nazwa firmy" Grid.Row="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Black"
                       FontSize="15"
                       />
            <!--zaokraglenie koncow-->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Background="Gray"
                    Margin="10,0,350,0"
                    CornerRadius="5"
                    >
                <TextBlock Text="Adres"
                        Margin="10,0,0,0"
                        />
                



            </Border>
                <Button
                    Grid.Column="1"
                    Grid.Row="0"
                    Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="300,0,0,0"
                    >
                    Wyszukaj
                </Button>
            <StackPanel
                    Grid.Row="0" 
                    Grid.Column="2">

                <RadioButton  Content ="znacznik uzytkownika do logowania"
                            
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="30"
                            Width="30"
                            Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>


            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
                <RadioButton Content="Lista restauracji"
                             Height="40"
                             
                             FontSize="12"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Mapa restauracji"
                             Height="40"
                             
                             FontSize="12"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Ulubione restauracje"
                             Height="40"
                             
                             FontSize="12"
                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
